---
import { getCollection } from "astro:content";

interface Props {
  id: string;
  label?: string;
}

const { id, label } = Astro.props;
const allDocs = await getCollection("docs");

/**
 * look for the entry by ID. in Astro's content layer,
 * IDs usually match the file path relative to content/docs/
 * and often exclude the file extension.
 */
const entry = allDocs.find((doc) => doc.id === id || doc.id === `${id}.mdx`);

const title = entry?.data.title;
const description = entry?.data.description;
const badge = entry?.data.sidebar?.badge;

// ensure base URL is clean for the link
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
const href = `${baseUrl}/${id}/`.replace(/\/+/g, "/");
---

{
  !entry ? (
    <span class="ref-error">
      Broken Ref: {id}
      <span class="error-tooltip">File not found: content/docs/{id}.mdx</span>
    </span>
  ) : (
    <span class="ref-container">
      <>
        <a href={href} class="ref-link">
          {label || title}
        </a>
        <span class="preview-card" role="tooltip">
          <span class="card-header">
            <span class="card-title">{title}</span>
            {badge && (
              <span class={`badge ${badge.variant}`}>{badge.text}</span>
            )}
          </span>
          <span class="card-body">{description}</span>
          <span class="card-footer">
            <span class="footer-prompt">Click to view reference</span>
            <code class="footer-path">/{id}</code>
          </span>
        </span>
      </>
    </span>
  )
}

<style>
  /* --- root container --- */
  .ref-container {
    position: relative;
    display: inline;
    white-space: nowrap;
  }

  /* --- inline link --- */
  .ref-link {
    color: var(--sl-color-accent-high);
    text-decoration: none;
    border-bottom: 1px dashed var(--sl-color-accent);
    font-weight: 500;
    transition: color 0.2s ease;
    display: inline;
  }

  .ref-link:hover {
    color: var(--sl-color-accent);
    border-bottom-style: solid;
  }

  /* --- hover preview --- */
  .preview-card {
    position: absolute;
    bottom: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(8px);

    width: 300px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    background-color: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    box-shadow: var(--sl-shadow-lg);

    visibility: hidden;
    opacity: 0;
    pointer-events: none;
    transition:
      transform 0.2s cubic-bezier(0.23, 1, 0.32, 1),
      opacity 0.2s ease,
      visibility 0.2s;
    z-index: 1000;

    /* reset formatting inside the card */
    white-space: normal;
    text-align: left;
    line-height: 1.5;
  }

  .ref-container:hover .preview-card {
    visibility: visible;
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }

  /* --- card content --- */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .card-title {
    font-weight: 700;
    color: var(--sl-color-white);
    font-size: 0.95rem;
    font-family: var(--__sl-font-mono);
  }

  .card-body {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }

  .card-footer {
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid var(--sl-color-gray-5);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-prompt {
    font-size: 0.65rem;
    color: var(--sl-color-gray-4);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.02rem;
  }

  .footer-path {
    font-size: 0.7rem !important;
    background: transparent !important;
    border: none !important;
    color: var(--sl-color-accent-high) !important;
    opacity: 0.6;
  }

  /* --- badges --- */
  .badge {
    padding: 0.1rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.6rem;
    font-weight: 800;
    text-transform: uppercase;
  }
  .badge.caution {
    background: var(--sl-color-orange-low);
    color: var(--sl-color-orange);
    border: 1px solid;
  }
  .badge.danger {
    background: var(--sl-color-red-low);
    color: var(--sl-color-red);
    border: 1px solid;
  }
  .badge.tip {
    background: var(--sl-color-green-low);
    color: var(--sl-color-green);
    border: 1px solid;
  }
  .badge.note {
    background: var(--sl-color-blue-low);
    color: var(--sl-color-blue);
    border: 1px solid;
  }

  /* --- error handling --- */
  .ref-error {
    color: var(--sl-color-red);
    text-decoration: underline wavy var(--sl-color-red-low);
    cursor: help;
    position: relative;
    display: inline-block;
  }

  .error-tooltip {
    visibility: hidden;
    position: absolute;
    bottom: 100%;
    left: 0;
    background: var(--sl-color-red);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
    white-space: nowrap;
    z-index: 10;
  }

  .ref-error:hover .error-tooltip {
    visibility: visible;
  }
</style>
