---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  type: 'physics' | 'render' | 'readonly' | 'ffi' | 'async';
}

const { type } = Astro.props;

const config = {
  physics: { 
    label: 'Physics', 
    icon: 'rocket', 
    color: 'var(--sl-color-orange)' 
  },
  render: { 
    label: 'Render', 
    icon: 'laptop', 
    color: 'var(--sl-color-blue)' 
  },
  readonly: { 
    label: 'Read Only', 
    icon: 'open-book', 
    color: 'var(--sl-color-gray-3)' 
  },
  ffi: { 
    label: 'FFI Struct', 
    icon: 'setting', 
    color: 'var(--sl-color-purple)' 
  },
  async: { 
    label: 'Async', 
    icon: 'external', 
    color: 'var(--sl-color-green)' 
  },
} as const;

const { label, icon, color } = config[type];
---

<span class="sdk-pill" style={`--pill-color: ${color}`}>
  <Icon name={icon} size="0.85rem" class="pill-icon" />
  <span class="pill-label">{label}</span>
</span>

<style>
  .sdk-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    background-color: color-mix(in srgb, var(--pill-color), transparent 90%);
    border: 1px solid color-mix(in srgb, var(--pill-color), transparent 60%);
    color: var(--pill-color);
    padding: 0.05rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.025rem;
    vertical-align: middle;
    margin: 0 0.1rem;
    white-space: nowrap;
  }

  .pill-label {
    line-height: 1;
  }

  :global(.pill-icon) {
    flex-shrink: 0;
  }
</style>